Include ~/.local/ssh/config

Host *
  SendEnv COLORTERM
  SetEnv TERM=xterm-256color
  ServerAliveInterval 60

  Match exec "test -d /Applications/1Password.app"
    IdentityAgent "${HOME}/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"

  Match exec "test -S /home/roly/.1password/agent.sock"
    IdentityAgent "${HOME}/.1password/agent.sock"

Host z zelda
    User roly
    HostName Zelda.lan
    ForwardAgent yes

Match host roly.sh,roly.ssh exec "command -v cloudflared"
    User roly
    ProxyCommand cloudflared access ssh --hostname ssh.roly.sh

Match host github.com exec "pwd | grep -i papa"
    HostName github.com
    User git
    IdentityFile ~/.ssh/papa
    IdentitiesOnly yes
