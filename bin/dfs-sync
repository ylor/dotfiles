#!/usr/bin/env fish
set --query DOTFILES || dfs-init

fd . "$DOTFILES/home" --hidden --absolute-path --type file --exec dfs-link
fd . $HOME --hidden --type symlink --follow --max-depth 1 --exec-batch rm
fd . $HOME/{.config,.local/bin,.local/share/applications} --hidden --type symlink --follow --exec-batch rm
# fd . $HOME/{.config,.local/bin,.local/share/applications} --hidden --type directory --type empty --exec-batch rmdir
