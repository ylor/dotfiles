#!/usr/bin/env fish
set brewfile 'brew "bat"
brew "btop"
brew "cloudflared"
brew "dockutil"
brew "evil-helix"
brew "eza"
brew "fd"
brew "fish"
brew "fzf"
brew "git"
brew "gum"
brew "hyperfine"
brew "mise"
brew "rename"
brew "ripgrep"
brew "rv"
brew "uv"
brew "viu"
brew "zoxide"'

if [ $DOTFILES_MODE = full ]
    set --append brewfile '
cask "1password"
cask "appcleaner"
cask "betterdisplay"
cask "font-sf-mono-nerd-font-ligaturized"
cask "font-symbols-only-nerd-font"
cask "ghostty"
cask "hammerspoon"
cask "hyperkey"
cask "orion"
cask "trex"
cask "virtualbuddy"
cask "zed"'
end

# Pipe to brew bundle
echo $brewfile | brew bundle --quiet --file=-
